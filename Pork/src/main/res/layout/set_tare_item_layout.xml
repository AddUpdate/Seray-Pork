<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4">

        <TextView
            android:id="@+id/set_tare_item_type"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radio_selected"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/configTextSize" />
        
        <TextView
            android:id="@+id/set_tare_item_data"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLength="7"
            android:scrollHorizontally="true"
            android:textColor="@color/red"
            android:textSize="@dimen/pluTextSize" />
        
        <Button
            android:id="@+id/set_tare_item_input"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/radio_gray"
            android:text="输入"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />
    </LinearLayout>
</LinearLayout>