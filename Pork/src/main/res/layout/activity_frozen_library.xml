<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <include
        layout="@layout/interfacepage"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_25"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_25"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="品名:"
            android:textColor="@color/white"
            android:textSize="@dimen/pluTextSize" />
        <TextView
            android:id="@+id/tv_frozen_library_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/red"
            android:background="@drawable/bg_editview"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/pluTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="数量:"
            android:textColor="@color/white"
            android:textSize="@dimen/pluTextSize" />

        <EditText
            android:id="@+id/et_frozen_library_number"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:maxLength="7"
            android:textColor="@color/red"
            android:background="@drawable/bg_editview"
            android:textSize="@dimen/functionButtonTextSize" />
        <Spinner
            android:id="@+id/spinner_frozen_library_type"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:background="@null"
            android:spinnerMode="dropdown"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_90"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="来自"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />

        <Spinner
            android:id="@+id/spinner_frozen_come"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_choose_library"
            android:spinnerMode="dialog"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="去往"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />
        <Spinner
            android:id="@+id/spinner_frozen_leave"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_choose_library"
            android:spinnerMode="dialog"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_frozen_library_into"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_60"
            android:background="@drawable/bg_button_ok"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />
      />
    </LinearLayout>

</LinearLayout>