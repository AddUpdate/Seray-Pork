<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/bg_back"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/bg_top"
        android:gravity="center"
        android:text="订单详情"
        android:textColor="@color/white"
        android:textSize="@dimen/pluTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="品名"
            android:textColor="@color/black"
            android:textSize="@dimen/configTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="需配数量"
            android:textColor="@color/black"
            android:textSize="@dimen/configTextSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已配数量"
            android:textColor="@color/black"
            android:textSize="@dimen/configTextSize" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/black"
            android:textSize="@dimen/configTextSize" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_query_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bt_query_order_return"
            />
        <Button
            android:id="@+id/bt_query_order_return"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="返回"
            android:background="@drawable/bg_btn_return"
            android:gravity="center"
            android:textSize="@dimen/configTextSize"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </RelativeLayout>
</LinearLayout>
