<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="480">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="@color/stock_back"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="02 采购商品信息"
            android:textColor="@color/white"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:text="注：*标记为必填项"
            android:textColor="@color/white"
            android:textSize="@dimen/managerCategoryTextSize"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="480"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名 *"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/managerTipTextSize" />

                <TextView
                    android:id="@+id/entry_frag_two_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="选择品名"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:singleLine="true"
                    android:textColorHint="@android:color/holo_red_light"
                    android:textSize="@dimen/managerTipTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品编码 *"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/managerTipTextSize" />

                <TextView
                    android:id="@+id/entry_frag_two_plucode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="选择PLU"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textColorHint="@android:color/holo_red_light"
                    android:textSize="@dimen/managerTipTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="计价单位  *"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/managerTipTextSize" />

                <Spinner
                    android:id="@+id/entry_frag_two_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/radio_selected"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_4"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_frag_two_quantity"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计重重量 *"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/managerTipTextSize" />
                <EditText
                    android:id="@+id/entry_frag_two_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="输入重量"
                    android:inputType="numberDecimal"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/red"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/managerTipTextSize" />
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="输入重量"
                        android:inputType="numberDecimal"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="@color/red"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/managerTipTextSize" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/entry_frag_two_online_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="150dp"
                        android:text="(公斤)"
                        android:textColor="@android:color/holo_red_light" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_frag_two_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计件数量 *"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/managerTipTextSize" />
                <EditText
                    android:id="@+id/entry_frag_two_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="输入数量"
                    android:inputType="numberDecimal"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/red"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/managerTipTextSize" />
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="输入数量"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:textColor="@color/red"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/managerTipTextSize" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/entry_frag_two_online_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="150dp"
                        android:textColor="@android:color/holo_red_light" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单价"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/managerTipTextSize" />
                    <EditText
                        android:id="@+id/entry_frag_two_unit_piece"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="输入单价"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:textColor="@color/red"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/managerTipTextSize"
                        />
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="输入单价"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/red"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/managerTipTextSize"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/entry_frag_two_online_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="10dp"
                            android:text="（元/公斤）"
                            android:textColor="@android:color/holo_red_light" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/entry_frag_two_cer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="合格证"
                    android:textColor="@color/white"
                    android:textColorHint="@android:color/holo_red_light"
                    android:textSize="@dimen/managerTipTextSize" />

                <Button
                    android:id="@+id/entry_frag_two_cer_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="@dimen/configTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="319"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/entry_frag_two_cer_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/default_img" />
            </LinearLayout>
            <Button
                android:id="@+id/entry_frag_two_keep"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/radio_selected"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/configTextSize" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
