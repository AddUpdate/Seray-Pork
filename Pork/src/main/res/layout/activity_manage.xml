<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_8"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:weightSum="2"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >
    <Button
        android:id="@+id/bt_manage_operation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="标定"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radio_gray"
       android:layout_margin="@dimen/dp_8"
        android:textSize="@dimen/managerTipTextSize"
        />
        <Button
           android:onClick="wifiSetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="网络设置"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/radio_gray"
            android:textSize="@dimen/managerTipTextSize"
            android:layout_margin="@dimen/dp_8"
            />
        <Button
            android:id="@+id/management"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="管理中心"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/radio_gray"
            android:textSize="@dimen/managerTipTextSize"
            android:layout_margin="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/reboot"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radio_selected"
            android:text="@string/manager_reboot"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/functionButtonTextSize" />

        <Button
            android:id="@+id/back_to_main"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radio_selected"
            android:text="@string/operation_back"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/functionButtonTextSize" />
    </LinearLayout>
 </LinearLayout>
