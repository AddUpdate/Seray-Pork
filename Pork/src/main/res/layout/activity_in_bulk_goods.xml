<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="确定重量入库"
        android:textColor="@color/white"
        android:textSize="@dimen/pluTextSize"
        android:background="@color/stock_back"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收据号"
            android:textColor="@color/red"
            android:textSize="@dimen/configTextSize"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="供应商"
            android:textColor="@color/red"
            android:textSize="@dimen/configTextSize"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="状态"
            android:textColor="@color/red"
            android:textSize="@dimen/configTextSize"
            android:gravity="center"
            />
        <TextView
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="备注"
            android:textColor="@color/red"
            android:textSize="@dimen/configTextSize"
            android:gravity="center"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_in_bulk_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/in_bulk_goods_return"
            android:layout_alignParentTop="true"
            />
        <Button
            android:id="@+id/in_bulk_goods_return"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="返回"
            android:background="@drawable/radio_selected"
            android:gravity="center"
            android:textSize="@dimen/configTextSize"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </RelativeLayout>
</LinearLayout>
