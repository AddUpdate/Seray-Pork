<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4">

        <TextView
            android:id="@+id/deduct_tare_item_type"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/radio_selected"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/configTextSize" />

        <TextView
            android:id="@+id/deduct_tare_item_reduce"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/radio_bg"
            android:gravity="center"
            android:text="—"
            android:textColor="@color/black"
            android:textSize="@dimen/managerTipTextSize" />

        <TextView
            android:id="@+id/deduct_tare_item_data"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLength="2"
            android:scrollHorizontally="true"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/pluTextSize" />

        <TextView
            android:id="@+id/deduct_tare_item_increase"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:background="@drawable/radio_bg"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="@dimen/managerTipTextSize" />

        <Button
            android:id="@+id/deduct_tare_item_input"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/radio_gray"
            android:text="输入"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />
    </LinearLayout>
</LinearLayout>