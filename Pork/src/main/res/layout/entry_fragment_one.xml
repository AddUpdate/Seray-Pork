<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_back"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="480">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="@color/stock_back"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="01 供应商信息"
            android:textColor="@color/white"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:text="注：*标记为必填项"
            android:textColor="@color/white"
            android:textSize="@dimen/managerCategoryTextSize"
            android:textStyle="bold" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="400"
    android:orientation="horizontal"
    android:weightSum="2"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商 *"
            android:textColor="@android:color/white"
            android:textSize="@dimen/managerTipTextSize"
            />
        <TextView
            android:id="@+id/entry_frag_one_suppliers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/managerTipTextSize"
            android:text="请选择供应商"
            android:layout_marginLeft="@dimen/dp_4"
            android:singleLine="true"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="采购单号 *"
            android:textColor="@android:color/white"
            android:textSize="@dimen/managerTipTextSize"
            />
        <EditText
            android:id="@+id/entry_frag_one_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/managerTipTextSize"
            android:hint="输入采购单号"
            android:textColorHint="@color/white"
            android:singleLine="true"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进货日期 *"
        android:textColor="@android:color/white"
        android:textSize="@dimen/managerTipTextSize"
        />
    <TextView
        android:id="@+id/entry_frag_one_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="@dimen/managerTipTextSize"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:singleLine="true"
        android:maxLength="10"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/managerTipTextSize"
            />
        <TextView
            android:id="@+id/entry_frag_one_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/managerTipTextSize"
            android:text="选择电话"
            android:paddingLeft="@dimen/dp_4"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明细个数"
            android:textColor="@android:color/white"
            android:textSize="@dimen/managerTipTextSize"
            />
        <EditText
            android:id="@+id/entry_frag_one_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textColorHint="@color/white"
            android:textSize="@dimen/managerTipTextSize"
            android:hint="输入明细个数"
            android:maxLength="7"
            android:gravity="center"
            />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="80"
            android:weightSum="3"
            >
            <TextView
                android:id="@+id/entry_frag_one_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="进货单"
                android:textColor="@color/white"
                android:textColorHint="@android:color/holo_red_light"
                android:textSize="@dimen/managerTipTextSize" />

            <Button
                android:id="@+id/entry_frag_one_input_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/configTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="319"
            android:orientation="horizontal"
          >
            <ImageView
                android:id="@+id/entry_frag_one_input_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/default_img" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
