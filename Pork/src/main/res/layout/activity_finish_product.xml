<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_text"
    android:orientation="vertical">

    <include
        layout="@layout/interfacepage"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="扫码序号:"
                android:textColor="@color/white"
                android:textSize="@dimen/pluTextSize" />

            <EditText
                android:id="@+id/et_finish_product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请扫码"
                android:minWidth="@dimen/dp_100"
                android:textColor="@color/red"
                android:textSize="@dimen/pluTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="规格:"
                android:textColor="@color/white"
                android:textSize="@dimen/pluTextSize" />

            <TextView
                android:id="@+id/tv_finish_product_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_editview"
                android:textColor="@color/red"
                android:textSize="@dimen/pluTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="数量:"
                android:textColor="@color/white"
                android:textSize="@dimen/pluTextSize" />

            <TextView
                android:id="@+id/tv_finish_product_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_editview"
                android:textColor="@color/red"
                android:textSize="@dimen/pluTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_16"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="皮重:"
                android:textColor="@color/white"
                android:textSize="@dimen/pluTextSize" />

            <TextView
                android:id="@+id/tv_finish_product_tare_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/base_weight"
                android:textColor="@color/yellow"
                android:textSize="@dimen/numPluTextSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_80"
                android:text="重量:"
                android:textColor="@color/white"
                android:textSize="@dimen/pluTextSize" />

            <TextView
                android:id="@+id/tv_finish_product_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/base_weight"
                android:textColor="@color/yellow"
                android:textSize="@dimen/numPluTextSize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="品名:"
            android:textColor="@color/white"
            android:textSize="@dimen/pluTextSize" />

        <TextView
            android:id="@+id/tv_finish_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_editview"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="@dimen/pluTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="数量:"
            android:textColor="@color/white"
            android:textSize="@dimen/pluTextSize" />

        <EditText
            android:id="@+id/et_finish_product_number"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_editview"
            android:gravity="center"
            android:maxLength="7"
            android:textColor="@color/red"
            android:textSize="@dimen/functionButtonTextSize" />
        <Spinner
            android:id="@+id/spinner_finish_product_type"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:background="@null"
            android:spinnerMode="dropdown"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_90"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="来自"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />

        <Spinner
            android:id="@+id/spinner_finish_come"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_choose_library"
            android:spinnerMode="dialog"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="去往"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />

        <Spinner
            android:id="@+id/spinner_finish_leave"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_choose_library"
            android:spinnerMode="dialog"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_finish_product_into"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_60"
            android:background="@drawable/bg_button_ok_1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/configTextSize" />

    </LinearLayout>

</LinearLayout>