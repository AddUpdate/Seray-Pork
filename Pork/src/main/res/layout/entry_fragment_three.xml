<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_back"
    android:orientation="vertical"
    android:weightSum="480"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="@color/stock_back"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="03 采购录入确认"
            android:textColor="@color/white"
            android:textSize="@dimen/TitleTextSize"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="480"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_above="@+id/entry_frag_three_ll_btn"
           android:layout_alignParentTop="true"
           >
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white"
               android:layout_marginTop="2dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:weightSum="6"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.3"
                   android:text="供应商"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.4"
                   android:text="订单号"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.1"
                   android:text="进货日期"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="电话号码"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.7"
                   android:text="明细个数"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.5"
                   android:text="进货单"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />

           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:weightSum="6"
               >
               <TextView
                   android:id="@+id/entry_frag_three_suppliers"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.3"
                   android:textColor="@color/white"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <TextView
                   android:id="@+id/entry_frag_three_batch_number"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.4"
                   android:textColor="@color/white"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <TextView
                   android:id="@+id/entry_frag_three_date"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.1"
                   android:textColor="@color/white"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:maxLength="10"
                   android:gravity="center"
                   />
               <TextView
                   android:id="@+id/entry_frag_three_tel"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textColor="@color/white"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <TextView
                   android:id="@+id/entry_frag_three_number"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.7"
                   android:textColor="@color/white"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <TextView
                   android:id="@+id/entry_frag_three_input"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.5"
                   android:textColor="@color/white"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               android:weightSum="7"
               >
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="商品名"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="PluCode"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="重量"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="计件"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="单价"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="合格证"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/white"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:text="删除"
                   android:textColor="@color/red"
                   android:textSize="@dimen/managerCategoryTextSize"
                   android:gravity="center"
                   />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/white" />
           <ListView
               android:id="@+id/entry_frag_three_list_view"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           </ListView>
       </LinearLayout>

        <LinearLayout
            android:id="@+id/entry_frag_three_ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            >

            <Button
                android:id="@+id/entry_frag_three_submit"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="提交"
                android:background="@drawable/bg_button_ok"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="@dimen/configTextSize"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
