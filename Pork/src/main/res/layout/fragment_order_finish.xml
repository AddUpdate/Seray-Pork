<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_back"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/order_finish_category_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/stock_back"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单号"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单时间"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="客户"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_order_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/confirm_goods_rl"
            />
        <RelativeLayout
            android:id="@+id/confirm_goods_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_order_finish_page"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/shapeone"
                android:gravity="center"
                android:textSize="@dimen/configTextSize"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/bt_order_finish_last_page"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                />
            <Button
                android:id="@+id/bt_order_finish_last_page"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="上一页"
                android:background="@drawable/bg_choose_library"
                android:gravity="center"
                android:textSize="@dimen/configTextSize"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/bt_order_finish_next_page"
                android:layout_marginRight="@dimen/dp_10"
                />
            <Button
                android:id="@+id/bt_order_finish_next_page"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="下一页"
                android:background="@drawable/bg_choose_library"
                android:gravity="center"
                android:textSize="@dimen/configTextSize"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/bt_order_finish_updata"
                android:layout_marginRight="@dimen/dp_10"
                />
            <Button
                android:id="@+id/bt_order_finish_updata"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="刷新"
                android:background="@drawable/bg_button_ok"
                android:gravity="center"
                android:textSize="@dimen/configTextSize"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/bt_order_finish_return"
                android:layout_marginRight="@dimen/dp_10"
                />
            <Button
                android:id="@+id/bt_order_finish_return"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="返回"
                android:background="@drawable/bg_btn_return"
                android:gravity="center"
                android:textSize="@dimen/configTextSize"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
